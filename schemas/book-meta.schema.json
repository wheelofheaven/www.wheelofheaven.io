{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wheelofheaven.io/schemas/book-meta.schema.json",
  "title": "Book Metadata",
  "description": "Metadata file for split-chapter book format",
  "type": "object",
  "required": ["slug", "titles", "primaryLang", "chapterCount"],
  "properties": {
    "slug": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "code": {
      "type": "string",
      "pattern": "^[A-Z0-9]{1,10}$"
    },
    "refId": {
      "type": "string"
    },
    "titles": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "minProperties": 1
    },
    "publicationYear": {
      "type": ["integer", "null"]
    },
    "primaryLang": {
      "type": "string",
      "pattern": "^[a-z]{2,3}(-[A-Za-z]{2,4})?$"
    },
    "schema": {
      "type": "array",
      "items": { "type": "string" }
    },
    "revision": {
      "type": "integer",
      "minimum": 1
    },
    "updated": {
      "type": "string",
      "format": "date-time"
    },
    "chapterCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of chapters"
    },
    "paragraphCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Total paragraphs across all chapters"
    },
    "chapterFiles": {
      "type": "array",
      "description": "List of chapter file names",
      "items": {
        "type": "object",
        "required": ["n", "file"],
        "properties": {
          "n": { "type": "integer" },
          "file": { "type": "string" },
          "title": { "type": "string" },
          "paragraphs": { "type": "integer" }
        }
      }
    }
  }
}
